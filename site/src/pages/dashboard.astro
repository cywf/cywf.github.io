import Layout from '../layouts/Layout.astro';
---

<Layout title="Dashboard - Kylo Parisher Portfolio" description="Live portfolio dashboard with GitHub metrics">
  <div class="mb-4">
    <h1 class="text-3xl font-bold mb-2">ðŸ“Š Portfolio Dashboard</h1>
    <p class="text-base-content/70">
      This is the original interactive dashboard with real-time GitHub metrics and visualizations.
    </p>
  </div>

  <div class="card bg-base-200 shadow-xl">
    <div class="card-body p-0">
      <iframe 
        src="/legacy/index.html" 
