---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Page Not Found" description="Page not found">
  <div class="hero min-h-[60vh]">
    <div class="hero-content text-center">
      <div class="max-w-md">
        <h1 class="text-9xl font-bold">404</h1>
        <p class="text-2xl font-semibold mt-4 mb-8">Page Not Found</p>
        <p class="mb-8">
          The page you're looking for doesn't exist or has been moved.
        </p>
        <div class="flex gap-4 justify-center flex-wrap">
          <a href="/" class="btn btn-primary">Go Home</a>
          <a href="/dashboard" class="btn btn-outline">View Dashboard</a>
          <a href="/docs" class="btn btn-outline">Read Docs</a>
        </div>
      </div>
    </div>
  </div>
</Layout>
